{
  "compilerOptions": {
    "baseUrl": "./",
    "types": ["node"], // Elimina 'vitest' y '@testing-library/jest-dom'
    "typeRoots": ["./node_modules/@types"],
    "composite": true,
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@context/*": ["src/context/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "src/**/*.test.tsx", "src/**/*.test.ts"],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./backend/tsconfig.node.json" }
  ]
}